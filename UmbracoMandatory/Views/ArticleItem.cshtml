@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ArticleItem>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.ArticleTitle</h1>
        <p class="lead text-muted">@Model.CreateDate.ToShortDateString() | @Model.CreatorName</p>
        <a href="@Model.Parent.Url" class="btn btn-secondary">News Overview</a>
    </div>
</section>

<section class="content p-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                @Model.ArticleContent
            </div>
        </div>
    </div>
</section>