@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.SiteTitle</h1>
    </div>
</section>

<section class="content p-5">
    <div class="container">
        @Model.MainContent
    </div>
</section>
<section class="bg-light py-5">
    <div class="container">
        <h2 class="mb-5 text-center">Our Latest Projects</h2>
        @Umbraco.RenderMacro("listNewestProjects")
    </div>
</section>